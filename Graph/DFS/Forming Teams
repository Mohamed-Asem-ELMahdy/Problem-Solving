#include <bits/stdc++.h>
#define test ll te;cin>>te;while(te--)

/*
int dx[]={1,1,0,-1,-1,-1,0,1}; // 8 dir
int dy[]={0,1,1,1,0,-1,-1,-1};
*/

int dx[]={1,0,-1,0};  // 4 dir
int dy[]={0,-1,0,1};
using namespace std;
/////////////////Problem//////////////////////
int n,m;
vector<int> arr[103];
bool vis[120];
bool clrs[120];
int ans=0;



void dfs(int node,bool color)
{
    vis[node]=true;
    clrs[node]=color;
    for(auto x:arr[node])
    {
        if(!vis[x])
        {
            //cout<<x<<" "<<!color<<endl;
            dfs(x,!color);
        }
        if(clrs[x]==clrs[node])
            ans++;
    }
}
void solve()
{
    cin>>n>>m;
    for(int i=0;i<m;i++){
        int x,y;
        cin>>x>>y;
        arr[x].push_back(y);
        arr[y].push_back(x);
    }
    for(int i=1;i<=n;i++)
    {
        if(!vis[i])
        {
            dfs(i,0);
        }
    }
    ans/=2;
    cout<<ans+((n-ans)&1);
}

signed main() {
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);

    solve();

}
